{
  "name": "zendfi-toolkit",
  "version": "0.1.0",
  "description": "ZendFi SDK, CLI, and Templates - The easiest way to integrate crypto payments",
  "private": true,
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.19",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "keywords": [
    "zendfi",
    "crypto",
    "payments",
    "solana",
    "sdk",
    "cli"
  ],
  "author": "ZendFi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zendfi/zendfi-toolkit.git"
  }
}
