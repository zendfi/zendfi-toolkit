{
  "name": "@zendfi/sdk",
  "version": "0.2.0",
  "description": "Zero-config TypeScript SDK for ZendFi crypto payments",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./nextjs": {
      "import": "./dist/nextjs.mjs",
      "require": "./dist/nextjs.js"
    },
    "./express": {
      "import": "./dist/express.mjs",
      "require": "./dist/express.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/nextjs.ts src/express.ts --format esm,cjs --dts --clean",
    "dev": "tsup src/index.ts src/nextjs.ts src/express.ts --format esm,cjs --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:list-links": "npm run build  && node test-list-links.ts",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "zendfi",
    "crypto",
    "payments",
    "solana",
    "sdk",
    "typescript"
  ],
  "author": "ZendFi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zendfi/zendfi-toolkit.git",
    "directory": "packages/sdk"
  },
  "dependencies": {
    "cross-fetch": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
