{
  "name": "create-zendfi-app",
  "version": "0.1.0",
  "description": "Create a ZendFi-powered app in seconds",
  "type": "module",
  "bin": {
    "create-zendfi-app": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --watch",
    "test": "vitest run",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "zendfi",
    "crypto",
    "payments",
    "cli",
    "scaffold",
    "generator"
  ],
  "author": "ZendFi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zendfi/zendfi-toolkit.git",
    "directory": "packages/cli"
  },
  "dependencies": {
    "@zendfi/sdk": "workspace:*",
    "chalk": "^5.6.2",
    "commander": "^11.1.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.3.2",
    "inquirer": "^9.3.8",
    "node-fetch": "^3.3.2",
    "ora": "^8.2.0",
    "validate-npm-package-name": "^5.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^20.19.24",
    "@types/validate-npm-package-name": "^4.0.2",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
