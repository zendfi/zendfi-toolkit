# ZendFi Configuration
ZENDFI_API_KEY={{API_KEY}}
ZENDFI_WEBHOOK_SECRET={{WEBHOOK_SECRET}}
ZENDFI_ENVIRONMENT={{ENVIRONMENT}}

# Database (PostgreSQL)
# For local development, you can use: postgresql://user:password@localhost:5432/dbname
# For production, use services like Neon, Supabase, or Railway
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/zendfi_ecommerce

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET={{NEXTAUTH_SECRET}}

# Email (Resend)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
