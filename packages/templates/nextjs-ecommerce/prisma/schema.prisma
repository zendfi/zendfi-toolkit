// Prisma schema for ZendFi E-commerce Template
// Database: PostgreSQL (can also use SQLite for development)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String    // Hashed password
  role          String    @default("customer") // customer, admin
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  orders        Order[]
  
  @@map("users")
}

// Product model
model Product {
  id          String      @id @default(cuid())
  name        String
  description String?
  price       Float
  image       String?     // Image URL or upload path
  category    String?
  stock       Int         @default(0)
  active      Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  orderItems  OrderItem[]
  
  @@index([category])
  @@index([active])
  @@map("products")
}

// Order model
model Order {
  id              String      @id @default(cuid())
  orderNumber     String      @unique @default(cuid())
  userId          String?
  user            User?       @relation(fields: [userId], references: [id])
  customerEmail   String
  customerName    String?
  status          String      @default("pending") // pending, paid, processing, shipped, completed, cancelled
  subtotal        Float
  tax             Float       @default(0)
  total           Float
  
  // ZendFi payment info
  paymentId       String?     @unique
  paymentStatus   String?     // pending, confirmed, failed
  transactionSig  String?     // Solana transaction signature
  
  // Shipping
  shippingAddress Json?       // { street, city, state, zip, country }
  trackingNumber  String?
  
  items           OrderItem[]
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  @@index([userId])
  @@index([status])
  @@index([paymentId])
  @@index([customerEmail])
  @@map("orders")
}

// Order items (products in an order)
model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float    // Price at time of purchase
  createdAt DateTime @default(now())
  
  @@index([orderId])
  @@index([productId])
  @@map("order_items")
}
